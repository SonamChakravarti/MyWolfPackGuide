<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3 id="myModalLabel">Edit Calendar Details</h3>
    </div>

    <%= form_for(@book, :url=>{:action => 'updateCal', :controller => 'calendar', :id => @book.id, :id1 => @book.category_id}, :method => :POST, :class => 'form-horizontal') do |f| %>
        <div class="modal-body">
          <%= f.label :name %>
          <%= text_field_tag :name, @book.name %>  <br>

          <%= f.label :Calid %>
          <%= text_field_tag :Calid, @book.Calid %>     <br>
          <% te=@book.category_id %>
          <% @val=Category.find(te) %>
          <%= f.label :category %>
          <%= text_field_tag :category, @val.name %>    <br>
        </div>

        <div class="modal-footer">
          <button class="btn btn-primary" type="submit">Save changes</button>
          <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        </div>

    <% end %>
  </div>
</div>

