


<script>
    var myData = <%=raw @calid.to_json %>;
    $(document).ready(function() {
        $('#calendar').fullCalendar({
            eventSources: myData
        });
    });
</script>
<h1>Home Page</h1>
<%= form_tag '/searches/show', :method => 'get' do %>
    <div align='right'>

      <%= text_field_tag :search, params[:search] %>

      <% options =options_for_select([['Department','Department'],['Calendar Name','Calendar Name'],['Event Name','Event Name']]) %>
      <label>Type</label>
      <%= select_tag :type, options %>
      <%= submit_tag "Search", :name => nil %>
    </div><br>
<% end %>
<div>
  <div id='calendar'></div>
</div>
